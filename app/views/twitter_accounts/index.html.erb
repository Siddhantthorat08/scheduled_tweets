<div class="d-flex align-items-center justify-content-center">

	<h1>Twitter Accounts</h1>
	<%=link_to "connect a twitter account", "/auth/twitter",method: :post, class: "btn btn-primary" %>
</div>

<%@twitter_accounts.each do |twitter_accounts|%>
<div class="d-flex align-items-center justify-content-center">
	<%= image_tag twitter_accounts.image, class: "rounded-circle" %>
	<%=link_to "@#{twitter_accounts.username}","https://twitter.com/#{twitter_accounts.username}",target: :_blank%>	
	<%=button_to "disconnect", twitter_accounts, method: :delete, data: {confirm: "are you sure?"}%>
</div>
<%end%>